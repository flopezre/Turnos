@model Turnos.Models.Paciente

<h4>Paciente</h4>
<hr/>
<div class="row">
    <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="IdPaciente">
            <div class="row">
                
                <!-- Campo Nombre -->
                <div class="input-field col s6">
                    <i class="material-icons prefix">account_circle</i>
                    <label asp-for="Nombre"></label>
                    <input asp-for="Nombre" type="text" class="validate"/>
                    <span asp-validation-for="Nombre"></span>
                </div>

                <!-- Campo Apellido -->
                <div class="input-field col s6">
                    <label asp-for="Apellido"></label>
                    <input asp-for="Apellido" type="text" class="validate"/>
                    <span asp-validation-for="Apellido"></span>
                </div>

                <!-- Campo Direccion -->
                <div class="input-field col s12">
                    <i class="material-icons prefix">home</i>
                    <label asp-for="Direccion"></label>
                    <input asp-for="Direccion" type="text" class="validate"/>
                    <span asp-validation-for="Direccion"></span>
                </div>

                <!-- Campo Telefono -->
                <div class="input-field col s12">
                    <i class="material-icons prefix">phone</i>
                    <label asp-for="Telefono"></label>
                    <input asp-for="Telefono" type="tel" class="validate"/>
                    <span asp-validation-for="Telefono"></span>
                </div>

                <!-- Campo Email -->
                <div class="input-field col s12">
                    <i class="material-icons prefix">local_post_office</i>
                    <label asp-for="Email"></label>
                    <input asp-for="Email" type="email" class="validate"/>
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="row">
                    <div class="col s6 m6">
                        <button class="waves-effect waves-light btn-small" title="Actualizar" type="submit"/>Actualizar</button>
                    </div>
                    <div class="col s6 m6">
                        <a class="waves-effect waves-light btn-small" title="Volver" asp-action="Index">Volver</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
