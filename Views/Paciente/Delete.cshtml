@model Turnos.Models.Paciente

<h3>Â¿Esta usted seguro de eliminar el paciente?</h3>

<div>
    <h5>Paciente</h5>
    <hr/>
    <div class="row">
        <div class="col s12 m6">
            <div class="card hoverable grey lighten-1">
                <div class="card-content black-text">
                    <span class="card-title">
                        <h5><b>@Html.DisplayFor(modelo => modelo.Nombre) @Html.DisplayFor(modelo => modelo.Apellido)</b></h5>
                    </span>
                    <dl>
                        <dt>
                            @Html.DisplayNameFor(modelo => modelo.Direccion)
                        </dt>
                        <dd>
                            @Html.DisplayFor(modelo => modelo.Direccion)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(modelo => modelo.Telefono)
                        </dt>
                        <dd>
                            @Html.DisplayFor(modelo => modelo.Telefono)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(modelo => modelo.Email)
                        </dt>
                        <dd>
                            @Html.DisplayFor(modelo => modelo.Email)
                        </dd>
                    </dl>
                </div>
                <div class="card-action blue-grey darken-1">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IdPaciente"/>
                        <button class="waves-effect waves-light btn-small" type="submit" title="Eliminar">Eliminar</button>
                        <button class="waves-effect waves-light btn-small" type="submit" title="Volver" asp-action="Index">Volver</button>
                    </form>
                </div>
            </div>
        </div>            
    </div>
</div>               
              