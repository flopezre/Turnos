<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Turnos</title>
    <!--Google Icon Materialize version web-->
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Materialize CSS version web -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <!-- Materialize CSS version local-->
    <link type="text/css" rel="stylesheet" href="~/css/materialize.min.css"  media="screen,projection"/>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav>
            <div class="nav-wrapper blue-grey darken-1">
                <a href="#!" class="brand-logo center">Sistemas de Turnos</a>
                <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <ul class="right hide-on-med-and-down">
                    <li><a asp-controller="Home" asp-action="Index">Inicio</a></li>
                    <li><a asp-controller="Especialidad" asp-action="Index">Especialidad</a></li>
                    <li><a asp-controller="Paciente" asp-action="Index">Paciente</a></li>
                    <li><a asp-controller="Medico" asp-action="Index">Medico</a></li>
                </ul>
            </div>
        </nav>

        <ul class="sidenav" id="mobile-demo">
            <li><a asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li><a asp-controller="Especialidad" asp-action="Index">Especialidad</a></li>
            <li><a asp-controller="Paciente" asp-action="Index">Paciente</a></li>
            <li><a asp-controller="Medico" asp-action="Index">Medico</a></li>
        </ul>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @* Este metodo lo que hace es incorporar la vista 
                que nosotros estamos ejecutando
            *@
            @RenderBody() 
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Turnos - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Materialize JavaScript version web  -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <!--Materialize JavaScript version local-->
      <script type="text/javascript" src="~/libjs/materialize.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!-- script para desplegar el menu en dispositivos moviles -->
    <script>
        $(document).ready(function() {
            // script para desplegar el menu en dispositivos moviles 
            $('.sidenav').sidenav();
            // script para desplegar un reloj para seleccionar la hora 
            $('.timepicker').timepicker();
            // script para desplegar las opciones del select
            $('select').formSelect();

        });
    </script>
</body>
</html>
