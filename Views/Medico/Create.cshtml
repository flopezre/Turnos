@model Turnos.Models.Medico

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4 class="col s12">Medico</h4>
<hr/>
<div class="row">
    <div >
        <form class="col s12" asp-action="Create">
            <div asp-validation-summary="ModelOnly"></div>
                <div class="row">
                <!-- Campo Nombre -->
                <div class="input-field col s6">
                    <i class="material-icons prefix">account_circle</i>
                    <input asp-for="Nombre" type="text" class="validate">
                    <label asp-for="Nombre"></label>
                    <span asp-validation-for="Nombre"></span>
                </div>

                <!-- Campo Apellido -->
                <div class="input-field col s6">
                    <input asp-for="Apellido" type="text" class="validate">
                    <label asp-for="Apellido"></label>
                    <span asp-validation-for="Apellido"></span>
                </div>

                <!-- Campo Direccion -->
                <div class="input-field col s12">
                    <i class="material-icons prefix">home</i>
                    <input asp-for="Direccion" type="text" class="validate">
                    <label asp-for="Direccion"></label>
                    <span asp-validation-for="Direccion"></span>
                </div>

                <!-- Campo Telefono -->
                <div class="input-field col s12">
                    <i class="material-icons prefix">phone</i>
                    <input asp-for="Telefono" type="tel" class="validate">
                    <label asp-for="Telefono"></label>
                    <span asp-validation-for="Direccion"></span>
                </div>

                <!-- Campo Email -->
                <div class="input-field col s12">
                    <i class="material-icons prefix">local_post_office</i>
                    <input asp-for="Email" type="email" class="validate">
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email"></span>
                </div>

                <!-- Campos Horario -->
                <div class="input-field col s12">
                    <i class="material-icons prefix">event_note</i>
                    <label asp-for="HorarioAtencionDesde" ></label>
                    <input type="text" class="timepicker" />
                    <span asp-validation-for="HorarioAtencionDesde" ></span>
                </div>
                <div class="input-field col s12">
                    <i class="material-icons prefix">event_note</i>
                    <label asp-for="HorarioAtencionHasta" ></label>
                    <input type="text" class="timepicker" />
                    <span asp-validation-for="HorarioAtencionHasta" ></span>
                </div>
                <div class="input-field col s12">
                    <i class="material-icons prefix">star_rate</i>
                    <!-- Utilizampos el objeto ViewBag para acceder al objeto ViewData-->
                    <select name="idEspecialidad"  asp-items="ViewBag.ListaEspecialidades"></select>
                </div>
                <div class="row">
                    <div class="col s6 m6">
                        <button class="waves-effect waves-light btn-small" type="submit" name="action">Agregar</button>
                    </div>
                    <div class="col s6 m6">
                        <a class="waves-effect waves-light btn-small" asp-action="Index">Volver</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
</body>
</html>
