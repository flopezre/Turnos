@model Turnos.Models.Medico

<div>
    <h4>Medico</h4>
    <hr />
    <div class="row">
        <div class="col s12 m6">
            <div class="card hoverable grey lighten-1">
                <div class="card-content black-text">
                    <span class="card-title">
                        <h5><b>@Html.DisplayFor(model => model.Nombre) @Html.DisplayFor(model => model.Apellido)
                        </h5></b>
                    </span>
                    <dl>
                        <dt>
                            @Html.DisplayNameFor(model => model.Direccion): @Html.DisplayFor(model => model.Direccion)
                        </dt>
                        <hr/>
                        <dt>
                            @Html.DisplayNameFor(model => model.Telefono): @Html.DisplayFor(model => model.Telefono)
                        </dt>
                        <hr/>
                        <dt>
                            @Html.DisplayNameFor(model => model.Email): @Html.DisplayFor(model => model.Email)
                        </dt>
                        <hr/>
                        <dt>
                            @Html.DisplayNameFor(model => model.HorarioAtencionDesde): @Html.DisplayFor(model => model.HorarioAtencionDesde)
                        </dt>
                        <hr/>
                        <dt>
                            @Html.DisplayNameFor(model => model.HorarioAtencionHasta): @Html.DisplayFor(model => model.HorarioAtencionHasta)
                        </dt>
                        <hr/>
                    </dl>
                </div>
                <div class="card-action blue-grey darken-1">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IdMedico"/>
                        <a class="waves-effect waves-light btn-small" asp-action="Edit" asp-route-id="@Model.IdMedico" >Editar</a>
                        @* <a asp-action="Edit" asp-route-id="@Model.IdMedico">Editar</a> *@
                        <a class="waves-effect waves-light btn-small" asp-action="Index"/>Volver</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
